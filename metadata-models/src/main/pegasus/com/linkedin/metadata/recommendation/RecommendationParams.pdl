namespace com.linkedin.metadata.recommendation

/**
 * Parameters required to render a recommendation of a given type
 */
record RecommendationParams {
  /**
   * Context to define the search recommendations
   */
  searchParams: optional SearchParams

  /**
   * Context to define the entity profile page
   */
  entityProfileParams: optional EntityProfileParams

  /**
   * Context about the recommendation
   */
  contentParams: optional ContentParams
}